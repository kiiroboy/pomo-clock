import tkinter as tk
import time
class Application(tk.Frame):
    def __init__(self, master=None):
        super().__init__(master)
        self.master = master
        self.pack()
        self.display()
        
    def display(self):
        # state for clock and timer
        self.timer_state = False
        self.clock_state = True

        # text displaying the time 
        self.prime_text = tk.Label(self, text="Testing", font=("",50))
        self.prime_text.config(bg="gray")
        self.prime_text.pack(side=tk.TOP, anchor=tk.W, fill=X, expand=True)

        #timer buttons
        self.timer_start = tk.Button(self, text="Start", command=self.start, font=("",50))
        self.timer_start.pack(anchor= tk.W, fill=tk.BOTH)
        self.timer_pause = tk.Button(self, text="Pause", command=self.pause, font=("",50))
        # setting button
        self.setting = tk.Button(self, text="Settings", command=self.open_setting_window, font=("",50))
        
        # quit button
        self.quit = tk.Button(self, text="QUIT", fg="red", command=self.master.destroy, font=("",50))

        
        #run the clock
        self.clock_f()

    def open_setting_window(self):
        setting_window = tk.Toplevel(self)
        setting_window.grab_set()

    def clock_f(self):
        if self.clock_state:
            hour  = time.strftime("%I")
            minute = time.strftime("%M")
            second = time.strftime("%S")
            self.prime_text.config(text=hour + ":" + minute + ":" + second)
            self.prime_text.after(1000, self.clock_f)
         
    def timer_f(self):
        if self.state == True:
            if self.remaining <= 0:
                print(self.timer_label)
                self.timer_label.configure(text="time's up")
            else:
                self.timer_label.configure(text="%d" % self.remaining)
                self.remaining = self.remaining - 1 
                self.after(1000, self.timer_f)
    
    def start(self):
        if self.state == False:
            self.state = True
            self.timer_f()
    
    def pause(self):
        if self.state == True:
            self.state = False
            

root = tk.Tk()
app = Application(master=root)
app.mainloop()



